    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "mysql2": "^3.14.0",
    "puppeteer": "^19.0.0",
    "puppeteer-screen-recorder": "^3.0.6",
    "save-dev": "^0.0.1-security",
    "ts-jest": "^29.2.6"
  },
  "devDependencies": {
    "@types/mysql": "^2.15.25",
    "@types/node": "^20.17.30",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
